@model IEnumerable<BenavidesFarm.DataModels.Models.Pages.Elements.ServiceType>

@{
    ViewBag.Title = "Listado de Tipos de Servicios";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "ServiceActive";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado de Tipos de Servicios </span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <a href="~/Admin/ServiceType/Create" class="btn sbold green"><i class="fa fa-plus"></i>Nuevo Tipo de Servicio</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover order-column" id="sample_1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceTypeNameDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceTypeProdutcsDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceTypeActive)
                    </th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceTypeNameDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceTypeProdutcsDescription)
                        </td>
                        <td>
                            @{
                                if (item.ServiceTypeActive == true)
                                {
                                    <span class="label label-sm label-success"> Activa </span>
                                }
                                else
                                {
                                    <span class="label label-sm label-warning"> Desactivada </span>
                                }
                            }
                        </td>
                        <td>
                            @{ var mEdit = "~/Admin/ServiceType/Edit/" + item.ServiceTypeId;}
                            <a href="@Url.Content(mEdit)"><li class="glyphicon glyphicon-pencil " style="color:lawngreen"></li></a>
                        </td>
                        <td>
                            @{ var mDel = "~/Admin/ServiceType/Delete/" + item.ServiceTypeId;}
                            <a href="@Url.Content(mDel)"><li class="glyphicon glyphicon-trash " style="color:orangered"></li></a>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>