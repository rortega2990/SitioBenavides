@model BenavidesFarm.DataModels.Models.Pages.Elements.ServiceType

@{
    ViewBag.Title = "Editar Tipo de Servicio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "ServiceActive";
}

    <h2>Editar Tipo de Servicio</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ServiceTypeId)

        <div class="form-horizontal">
            <h4>Tipo de Servicio</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceTypeName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ServiceTypeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del tipo de servicio", required = true } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceTypeNameDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ServiceTypeNameDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Nota sobre el tipo de servicio" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceTypeProdutcsDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ServiceTypeProdutcsDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Nota descriptiva sobre los servicios" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceTypeActive, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ServiceTypeActive)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <button type="submit" class="btn blue">Aceptar</button>
                    @Html.ActionLink("Cancelar", "Index", null, htmlAttributes: new {@class = "btn default"})
                </div>
            </div>
        </div>
    }
