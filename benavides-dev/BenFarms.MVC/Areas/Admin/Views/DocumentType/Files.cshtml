@model IEnumerable<BenavidesFarm.DataModels.Models.Pages.Elements.DocumentFiles>

@{
    ViewBag.Title = "Listado de Archivos";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "ProviderPageActive";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado de Archivos: @ViewBag.TipoDocumento</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        
                    </div>
                    @Html.ActionLink("Atrás", "Index", null, htmlAttributes: new { @class = "btn default" })
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover order-column" id="sample_1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressFile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameDescriptiveFile)
                    </th>
                    <th>
                        Eliminar
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Content(item.AddressFile)" target="_blank">@Html.DisplayFor(modelItem => item.GetFileName)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameDescriptiveFile)
                        </td>
                        <td>
                            @{ var mDel = "~/Admin/DocumentType/DeleteFiles/" + item.DocumentFilesId;}
                            <a href="@Url.Content(mDel)"><li class="glyphicon glyphicon-trash " style="color:orangered"></li></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
