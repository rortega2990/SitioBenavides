@model IEnumerable<BenavidesFarm.DataModels.Models.Pages.Elements.DocumentType>

@{
    ViewBag.Title = "Listado de Tipos de Documentos";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "ProviderPageActive";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado de Tipos de Documentos </span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <a href="~/Admin/DocumentType/Create" class="btn sbold green"><i class="fa fa-plus"></i>Nuevo Tipo de Documento</a>
                    </div>
                    <div class="btn-group">
                        <a href="~/Admin/DocumentType/Upload" class="btn sbold green"><i class="fa fa-upload"></i>Subir archivos de Proveedores</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover order-column" id="sample_1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DocumentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DocumentDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DocumentActive)
                    </th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                    <th>Ver archivos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentDescription)
                        </td>
                        <td>
                            @{
                                if (item.DocumentActive == true)
                                {
                                    <span class="label label-sm label-success"> Activa </span>
                                }
                                else
                                {
                                    <span class="label label-sm label-warning"> Desactivada </span>
                                }
                            }
                        </td>
                        <td>
                            @{ var mEdit = "~/Admin/DocumentType/Edit/" + item.DocumentTypeId;}
                            <a href="@Url.Content(mEdit)"><li class="glyphicon glyphicon-pencil " style="color:lawngreen"></li></a>
                        </td>
                        <td>
                            @{ var mDel = "~/Admin/DocumentType/Delete/" + item.DocumentTypeId;}
                            <a href="@Url.Content(mDel)"><li class="glyphicon glyphicon-trash " style="color:orangered"></li></a>
                        </td>
                        <td>
                            @{ var mFiles = "~/Admin/DocumentType/Files/" + item.DocumentTypeId;}
                            <a href="@Url.Content(mFiles)"><li class="glyphicon glyphicon-upload " style="color:blue"></li></a>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
