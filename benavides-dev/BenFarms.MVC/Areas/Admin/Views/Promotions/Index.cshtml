@{
    ViewBag.Title = "Listado de Promociones";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "PromotionsPageIndex";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado de Promociones </span>
        </div>
    </div>
    <div class="portlet-body">

        <table class="table table-striped table-bordered table-hover order-column" id="promotions">
            <thead>
                <tr>
                    <th>
                        Nombre Producto Acumula
                    </th>
                    <th>
                        Regla
                    </th>
                    <th>
                        Limite de Piezas
                    </th>
                    <th>
                        Limite Periocidad
                    </th>
                    <th>Codigo Gratis</th>
                    <th>Laboratorio</th>
                    <th>Proveedor</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Estatus</th>

                </tr>
            </thead>
            
        </table>
    </div>
</div>