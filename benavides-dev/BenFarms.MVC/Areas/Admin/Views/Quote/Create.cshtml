@model BenFarms.MVC.Areas.Admin.Models.QuoteInputModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Insertar nueva Cita";
    ViewBag.Page = "QuoteActive";
}

<h2>Crear Nueva Cita</h2>

<form class="form-horizontal" method="POST" action="" enctype="multipart/form-data" id="formQuote">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Pilar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.QuoteText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.QuoteText, new { @class = "form-control", placeholder = "Cita", required = true })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.QuoteAuthor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.QuoteAuthor, new { @class = "form-control", placeholder = "Autor" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.QuoteAuthorSign, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.QuoteAuthorSign, new { @class = "form-control", placeholder = "Firma del Autor" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Imagen</label>
            <div class="col-md-6">
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width:200px; height: 200px;"> </div>
                    <div>
                        <span class="btn red btn-outline btn-file">
                            <span class="fileinput-new"> Seleccionar Imagen </span>
                            <span class="fileinput-exists"> Cambiar </span>
                            <input type="file" name="QuoteAuthorPhoto" id="QuoteAuthorPhoto">
                        </span>
                        <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Eliminar </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <a id="btnUploadQuoteImage" class="btn blue">Aceptar</a>
                @Html.ActionLink("Cancelar", "Index", null, htmlAttributes: new { @class = "btn default" })
            </div>
        </div>
    </div>
</form>


