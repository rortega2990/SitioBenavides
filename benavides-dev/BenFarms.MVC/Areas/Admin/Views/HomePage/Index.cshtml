@model IEnumerable<BenavidesFarm.DataModels.Models.Pages.HomePage>

@{
    ViewBag.Title = "Listado de Páginas de Inicio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "HomePageIndex";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado Páginas de Inicio </span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <a href="~/Admin/HomePage/Edit" class="btn sbold green"><i class="fa fa-plus"></i> Editar Página </a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover order-column" id="sample_1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.HomePageCustomValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HomePageActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HomePageCreatedDate)
                    </th>
                    <th>Vista Previa</th>
                    <th>Activar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomePageCustomValue)
                        </td>
                        <td>
                            @{
                                if (item.HomePageActive)
                                {
                                    <span class="label label-sm label-success"> Activa </span>
                                }
                                else
                                {
                                    <span class="label label-sm label-warning"> Desactivada </span>

                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomePageCreatedDate)
                        </td>
                        <td>
                            @{ var mEdit = "~/Admin/HomePage/Preview/" + item.HomePageId;}
                            <a href="@Url.Content(mEdit)" target="_blank"><li class="glyphicon glyphicon-search " style="color: lawngreen"></li></a>
                        </td>
                        <td>
                            @{
                                var mAct = "~/Admin/HomePage/SetState/" + item.HomePageId;
                                if (!item.HomePageActive)
                                {
                                    <a href="@Url.Content(mAct)"><li class="fa fa-check" style="color:goldenrod">Activar</li></a>
                                }
                            }
                        </td>
                        <td>
                            @if(item.HomePageActive == false)
                            {
                                var deleteLink = "~/Admin/HomePage/ConfirmDeletion/" + item.HomePageId;
                                <a href="@Url.Content(deleteLink)"><div class="glyphicon glyphicon-trash" style="color: goldenrod"> Eliminar</div></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>