@model IEnumerable<BenavidesFarm.DataModels.Models.Pages.WhoWeArePage>

@{
    ViewBag.Title = "Listado de Páginas de Inicio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "WhoWeAre";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado Páginas de Quiénes somos </span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <a href="~/Admin/WhoWeAre/Edit" class="btn sbold green"><i class="fa fa-plus"></i> Editar Página </a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover order-column" id="sample_1">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        Fecha de Creación
                    </th>
                    <th>Vista Previa</th>
                    <th>Activar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @{
                                if (item.Active)
                                {
                                    <span class="label label-sm label-success"> Activa </span>
                                }
                                else
                                {
                                    <span class="label label-sm label-warning"> Desactivada </span>

                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationDate)
                        </td>
                        <td>
                            @{ var mEdit = "~/Admin/WhoWeAre/PreviewPageById/" + item.Id;}
                            <a href="@Url.Content(mEdit)" target="_blank"><span class="glyphicon glyphicon-search " style="color: lawngreen"></span></a>
                        </td>
                        <td>
                            @{
                                var mAct = "~/Admin/WhoWeAre/SetState/" + item.Id;
                                if (!item.Active)
                                {
                                    <a href="@Url.Content(mAct)"><span class="fa fa-check" style="color:goldenrod">Activar</span></a>
                                }
                            }
                        </td>
                        <td>
                            @{
                                if (item.Active == false)
                                {
                                    var deleteLink = "~/Admin/WhoWeAre/ConfirmDeletion/" + item.Id;
                                    <a href="@Url.Content(deleteLink)"><span class="glyphicon glyphicon-trash" style="color: goldenrod"> Eliminar</span></a>
                                }
                                }
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
