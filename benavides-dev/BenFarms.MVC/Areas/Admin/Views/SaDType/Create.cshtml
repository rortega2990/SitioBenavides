@model BenavidesFarm.DataModels.Models.Pages.Elements.SaDTypeNumber

@{
    ViewBag.Title = "Insertar nuevo Número de SaD";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "SaDActive";
}

<h2>Crear Nuevo Número de SaD</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Número de SaD</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SaDTypeNumberCity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.SaDTypeNumberCity, new { htmlAttributes = new { @class = "form-control", required = true } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SaDTypeNumberPhone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.SaDTypeNumberPhone, new { htmlAttributes = new { @class = "form-control", required = true } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SaDTypeNumberActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.SaDTypeNumberActive)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button type="submit" class="btn blue">Aceptar</button>
                @Html.ActionLink("Cancelar", "Index", null, htmlAttributes: new { @class = "btn default" })
            </div>
        </div>
    </div>
}