@model IEnumerable<BenavidesFarm.DataModels.Models.Pages.Elements.ReportType>

@{
    ViewBag.Title = "Listado de Tipos de Reportes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "InvestorPageActive";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado de Tipos de Reportes</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <a href="~/Admin/ReportType/Create" class="btn sbold green"><i class="fa fa-plus"></i>Nuevo Tipo de Reporte</a>
                    </div>
                    <div class="btn-group">
                        <a href="~/Admin/ReportType/Upload" class="btn sbold green"><i class="fa fa-upload"></i>Subir archivos de Reportes</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover order-column" id="sample_1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ReportName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReportDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReportActive)
                    </th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                    <th>Ver archivos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportDescription)
                        </td>
                        <td>
                            @{
                                if (item.ReportActive == true)
                                {
                                    <span class="label label-sm label-success"> Activa </span>
                                }
                                else
                                {
                                    <span class="label label-sm label-warning"> Desactivada </span>
                                }
                            }
                        </td>
                        <td>
                            @{ var mEdit = "~/Admin/ReportType/Edit/" + item.ReportTypeId;}
                            <a href="@Url.Content(mEdit)"><li class="glyphicon glyphicon-pencil " style="color:lawngreen"></li></a>
                        </td>
                        <td>
                            @{ var mDel = "~/Admin/ReportType/Delete/" + item.ReportTypeId;}
                            <a href="@Url.Content(mDel)"><li class="glyphicon glyphicon-trash " style="color:orangered"></li></a>
                        </td>
                        <td>
                            @{ var mFiles = "~/Admin/ReportType/Files/" + item.ReportTypeId;}
                            <a href="@Url.Content(mFiles)"><li class="glyphicon glyphicon-upload " style="color:blue"></li></a>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
