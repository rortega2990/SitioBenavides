@model BenavidesFarm.DataModels.Models.Pages.Elements.ReportType

@{
    ViewBag.Title = "Insertar nuevo Tipo de Reporte";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "InvestorPageActive";
}

<h2>Crear Nuevo Tipo de Reporte</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tipo de Reporte</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ReportName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.ReportName, new { htmlAttributes = new { @class = "form-control", required = true } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReportDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.ReportDescription, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReportActive, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.ReportActive)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button type="submit" class="btn blue">Aceptar</button>
                @Html.ActionLink("Cancelar", "Index", null, htmlAttributes: new { @class = "btn default" })
            </div>
        </div>
    </div>
}
