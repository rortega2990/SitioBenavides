@model IEnumerable<BenavidesFarm.DataModels.Models.Pages.Elements.Branch>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listado de Sucursales";
    ViewBag.Page = "BranchActive";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado de Sucursales </span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <a href="~/Admin/Branch/Create" class="btn sbold green"><i class="fa fa-plus"></i> Nueva Sucursal </a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover order-column" id="sample_1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchCity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchHour1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchLongitude)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchLatitude)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BranchActive)
                    </th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BranchName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BranchAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City.Name)
                        </td>
                        <td>
                            @item.GetHour()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BranchLongitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BranchLatitude)
                        </td>
                        <td>
                            @{
                                if (item.BranchActive == true)
                                {
                                    <span class="label label-sm label-success"> Activa </span>
                                }
                                else
                                {
                                    <span class="label label-sm label-warning"> Desactivada </span>
                                }
                            }
                        </td>
                        <td>
                            @{ var mEdit = "~/Admin/Branch/Edit/" + item.BranchId;}
                            <a href="@Url.Content(mEdit)"><li class="glyphicon glyphicon-pencil " style="color:lawngreen"></li></a>
                        </td>
                        <td>
                            @{ var mDel = "~/Admin/Branch/Delete/" + item.BranchId;}
                            <a href="@Url.Content(mDel)"><li class="glyphicon glyphicon-trash " style="color:orangered"></li></a>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>   
