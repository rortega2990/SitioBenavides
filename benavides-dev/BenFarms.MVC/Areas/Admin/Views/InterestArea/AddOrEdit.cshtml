@model BenavidesFarm.DataModels.Models.Pages.Elements.InterestArea

@{
    ViewBag.Title = "Editar área de administración";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "TeamPageArea";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado de Categorías de Áreas de Interés </span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                @using (Html.BeginForm("ConfirmAddOrEdit", "InterestArea"))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.InterestAreaId)
                        @Html.HiddenFor(model => model.CreationDate)

                        <div class="form-group">
                            @Html.LabelFor(model => model.InterestAreaName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.InterestAreaName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InterestAreaName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MailCollection, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.MailCollection, new { @class = "form-control"})
                                @Html.ValidationMessageFor(model => model.MailCollection, "", new { @class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Activa</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.InterestAreaActive)
                                    @Html.ValidationMessageFor(model => model.InterestAreaActive, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-10">
                                @Html.ActionLink("Atrás", "Index", new { Controller = "InterestArea" }, new { @class = "btn btn-default"})
                                <input type="submit" value="Aceptar" class="btn blue" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


       

        
