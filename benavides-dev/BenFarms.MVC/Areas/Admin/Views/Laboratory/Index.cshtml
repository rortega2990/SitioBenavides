@model IEnumerable<BenFarms.MVC.Areas.Admin.Models.LaboratoryViewModel>

@{
    ViewBag.Title = "Listado de Laboratorios";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "Laboratory";
}

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase"> Listado Laboratorios </span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <a href="~/Admin/Laboratory/AddOrModifyLaboratory" class="btn sbold green"><i class="fa fa-plus"></i> Agregar Laboratorio</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover order-column" id="sample_1">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        Municipio
                    </th>
                    <th>Estado</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @if (item.Active)
                            {
                            <span class="label label-sm label-success"> Activo </span>
                            }
                            else
                            {
                            <span class="label label-sm label-warning"> Inactivo </span>

                            }
                        </td>
                        <td>@{ var mEdit = "~/Admin/Laboratory/AddOrModifyLaboratory/" + item.Id;}
                            <a href="@Url.Content(mEdit)" class="glyphicon glyphicon-pencil " style="color:lawngreen"></a>
                        </td>
                        <td>
                            @{ var mRemove= "~/Admin/Laboratory/Remove/" + item.Id;}
                        <a href="@Url.Content(mRemove)" class="glyphicon glyphicon-trash " style="color:red"></a>
                    </td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
</div>