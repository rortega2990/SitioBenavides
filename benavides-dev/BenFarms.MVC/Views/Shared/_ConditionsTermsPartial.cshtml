@model BenavidesFarm.DataModels.Models.Pages.ConditionsTermsPage

<div class="banner" style="background-color: @Html.Raw(Model.ConditionsTermsPageBgColorHead)">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="banner-caption">
                    <br>
                    <span class="caption-lg" style="color: @Html.Raw(Model.ConditionsTermsPageColorHeadText)">@Model.ConditionsTermsPageHeadText</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container margin-top-100 titulo-contacto">
    <p style="color: @Html.Raw(Model.ConditionsTermsPageTextColor);">@Model.ConditionsTermsPageTextTitle</p>
    <p class="margin-top-20 text-left margin-bottom-100"
       style="color: @Html.Raw(Model.ConditionsTermsPageTextColor);font-weight: 300">
        @Html.Raw(Model.ConditionsTermsPageTextDescription)
</p>
</div>
