@model BenFarms.MVC.Models.ForgotPasswordViewModel


<div class="modal fade" id="modal-recuperar-password">
    <div class="modal-dialog">
        <div class="modal-content bg-color-blue-marine">
            <form class="form-horizontal " role="form" id="recuperarPassForm">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <legend>Recuperar Contraseña</legend>
                    <div class="row">
                        <div class="col-sm-offset-3 col-sm-6">

                            <div class="form-group">
                                @Html.LabelFor(m => m.Card, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.Card, new { @class = "form-control", id = "CardForgotPass", name = "CardForgotPass", required = true })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "Email", name = "Email", required = true })
                                </div>
                            </div>
                            <span id="mensajeForgotPassword" class="color-red"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="footer-login">
                        <button type="submit" class="btn btn-primary" id="btnRecuperarPass">Ok</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
