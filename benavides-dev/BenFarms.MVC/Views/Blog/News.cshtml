@model BenavidesFarm.DataModels.Models.Pages.NewsPage
@{
    ViewBag.Title = "Noticias";
}

@section styles{

<link href="~/assets/global/plugins/cubeportfolio/css/cubeportfolio.css" rel="stylesheet" type="text/css" />
<link href="~/assets/global/css/blog_style.css" rel="stylesheet" type="text/css" />

    }


<div class="row no-margin-left no-margin-right " style="background-color: @Html.Raw(Model.NewsPageColorBgHead)">




    <div class="col-md-6 col-xs-12 col-sm-6 no-padding-left no-padding-right margin-top-5-porciento margin-bottom-5-porciento index-200">


        <div class="col-md-offset-2 col-sm-offset-1 col-sm-11 col-md-8 col-xs-12 col-xs-offset-0 blog-title-header"
             style="color:  @Html.Raw(Model.NewsPageColorTextHead);">
            <h1 class="title-blog">@Model.NewsPageTextHead</h1>
        </div>

        <div class="col-md-offset-2 col-sm-offset-1 col-sm-11 col-md-8 col-xs-12 col-xs-offset-0">
            <a class="subtitle-blog btn btn-blog-header" style="background-color: @Html.Raw(Model.NewsPageColorBgSubTextHead);color:@Html.Raw(Model.NewsPageColorSubTextHead);">
                @Model.NewsPageSubTextHead
            </a>
        </div>
    </div>

    <div class="col-md-5 col-xs-12 col-sm-5 no-padding-right no-padding-left">
        <img style="max-height: 450px;width: 100%;"
             class="img-responsive  no-margin-left no-margin-right"
             src="@Url.Content(Model.NewsPageImageHead)" />
    </div>
</div>

<div class="container">
    <div class="row margin-bottom-100 margin-top-40">
        <div class="col-md-12 col-xs-12" style="margin-top:3em">
            @if (Model.NewsPageImageDescription != null)
            {
                <img class="image-responsive col-md-3 col-xs-12 col-sm-4" src="@Url.Content(Model.NewsPageImageDescription)" />
            }            
            <div class="text-right">
                <h2 class="subtitle-blog no-padding-left no-padding-right" style="color: @Html.Raw(Model.NewsPageColorTitleDescription1)">@Model.NewsPageTitleDescription1</h2>
            </div>
            <div class="text-justify">
                @Html.Raw(Model.NewsPageTextDescription1)
            </div>
            <div class="text-right">
                <h4 style="color: @Html.Raw(Model.NewsPageColorTitleDescription2)">@Model.NewsPageTitleDescription2</h4>
            </div>
            <div class="text-justify">
                @Html.Raw(Model.NewsPageTextDescription2)
            </div>
        </div>

    </div>

</div>

