@model BenavidesFarm.DataModels.Models.Pages.BlogPage
@{
    ViewBag.Title = "Blog";
}

<div class="row no-margin-left no-margin-right " style="background-color: @Html.Raw(Model.BlogPageColorBgHead)">
    <div class="col-md-6 col-xs-12 col-sm-6 no-padding-left no-padding-right" style="margin-top: 10%; z-index: 200;margin-bottom: 5%;">
        <div class="col-md-offset-4 col-sm-offset-1 col-sm-11 col-md-8 col-xs-12 col-xs-offset-0" style="color: @Html.Raw(Model.BlogPageColorTextHead);">
            <span style="font-weight: bold;font-size: 3.5em">@Model.BlogPageTextHead</span>
        </div>
        <div class="col-md-offset-4 col-sm-offset-1 col-sm-11 col-md-8 col-xs-12 col-xs-offset-0">
            <a class="btn" style="color: @Html.Raw(Model.BlogPageColorTitleDesc);font-size: 1.5em;background-color: @Html.Raw(Model.BlogPageColorBgTitleDesc)">@Model.BlogPageTitleDesc</a>
        </div>
    </div>
    <div class="col-md-6 col-xs-12 col-sm-6 no-padding-right no-padding-left">
        <img style="height: 400px;width: 100%;"
             class="img-responsive  no-margin-left no-margin-right"
             src="@Url.Content(Model.BlogPageImage)" />
    </div>
</div>
<div class="container">
    <div class="row" style="margin-top: 50px;margin-bottom: 100px">
        <h4 style="color: @Html.Raw(Model.BlogPageColorBgTitleDesc)">
            @Html.Raw(Model.BlogPageTitleDesc)
        </h4>
        <div>
            <p>
                @Html.Raw(Model.BlogPageTextDesc)
            </p>
        </div>
    </div>
</div>